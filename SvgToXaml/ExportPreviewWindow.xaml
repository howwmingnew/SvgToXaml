<Window x:Class="SvgToXaml.ExportPreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Export Preview"
    MinWidth="400" MinHeight="300"
    Background="#FF1E1E1E"
    FontFamily="Segoe UI"
    Foreground="#FFCCCCCC"
    WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 標題列 -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="12,8">
            <TextBlock x:Name="HeaderText" FontSize="13" Foreground="#FFCCCCCC"/>
        </Border>
        <!-- 圖示區域 -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#FF3C3C3C">
            <WrapPanel x:Name="IconPanel" Width="920" Margin="10"/>
        </ScrollViewer>
    </Grid>
</Window>
